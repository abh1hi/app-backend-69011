rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files, so anyone can see property images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow a user to write (upload/update/delete) only to their own folder 
    // within the 'properties' directory.
    match /properties/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
